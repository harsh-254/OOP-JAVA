import java.util.*;
public class Main{
    public static void main(String[] args){
        Scanner scn = new Scanner(System.in);
        int n = scn.nextInt();
        
        int sp = n-1;
        for(int i=1;i<=n;i++){
    
            for(int k=1;k<=sp;k++){
                System.out.print("\t");
            }
            
            sp--;
            
            System.out.println("*\t");
        }
    }
}
